# vim: set filetype=i3 ts=4 sw=4 et:

input type:touchpad {
    click_method clickfinger
    scroll_method two_finger
    dwt enabled
    tap enabled
    tap_button_map lrm
}

# TrackPoint
input 2:14:ETPS/2_Elantech_TrackPoint {
    
}

# Integrated keyboard
input 1:1:AT_Translated_Set_2_keyboard {
    xkb_layout us,us,hu
    xkb_variant ,intl,
    # I would prefer Win+Space but it's used in the default config for floating/tiled focus switch
    xkb_options caps:swapescape,grp:alt_shift_toggle
}

# Touchscreen
input 1386:20816:Wacom_Pen_and_multitouch_sensor_Finger {
    map_to_output eDP-1
}

# Wacom pen
input 1386:20816:Wacom_Pen_and_multitouch_sensor_Pen {
    map_to_output eDP-1
}
